{
  "name": "tripalium",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "pnpm --filter @tripalium/api db:generate",
    "db:migrate": "pnpm --filter @tripalium/api db:migrate",
    "db:migrate:dev": "pnpm --filter @tripalium/api db:migrate:dev",
    "db:seed": "pnpm --filter @tripalium/api db:seed",
    "db:studio": "pnpm --filter @tripalium/api db:studio",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
