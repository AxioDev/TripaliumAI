# =============================================================================
# TripaliumAI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://tripalium:tripalium@localhost:5432/tripalium?schema=public"

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# JWT secret for API tokens (can be same as NEXTAUTH_SECRET for POC)
JWT_SECRET="your-jwt-secret-here"

# -----------------------------------------------------------------------------
# OpenAI
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-..."

# Optional: Override model defaults
# OPENAI_VISION_MODEL="gpt-4o"
# OPENAI_CHAT_MODEL="gpt-4o"
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@tripalium.local"

# -----------------------------------------------------------------------------
# Redis (for job queue)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
# Options: "local" or "s3"
STORAGE_TYPE="local"
STORAGE_PATH="./storage"

# S3-compatible storage (if STORAGE_TYPE=s3)
# S3_ENDPOINT="http://localhost:9000"
# S3_BUCKET="tripalium"
# S3_ACCESS_KEY="minioadmin"
# S3_SECRET_KEY="minioadmin"
# S3_REGION="us-east-1"

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV="development"
PORT="3001"

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable browser automation for form filling (requires Playwright)
ENABLE_AUTO_FORM="false"

# Actually send emails (false = dry run, logs only)
ENABLE_REAL_EMAIL="false"

# Rate limits
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Enable detailed logging
DEBUG="tripalium:*"

# Disable SSL verification for local HTTPS (dev only!)
# NODE_TLS_REJECT_UNAUTHORIZED="0"
